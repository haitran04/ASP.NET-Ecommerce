@{
    ViewBag.Title = "Thanh toán thành công";
}

<div class="container mt-5">
    <div class="card text-center shadow-lg p-5">
        <div class="card-body">
            <div class="mb-4">
                <i class="fas fa-check-circle text-success" style="font-size: 3rem;"></i>
            </div>
            <h2 class="text-success">Cảm ơn bạn đã thanh toán thành công!</h2>
            <p class="text-muted">Giỏ hàng của bạn đã được làm trống. Bạn có thể tiếp tục mua sắm hoặc kiểm tra đơn hàng.</p>
            <div class="mt-4">
                <a href="@Url.Action("Index", "Home")" class="btn btn-primary btn-lg">
                    <i class="fas fa-shopping-cart"></i> Tiếp tục mua sắm
                </a>
                <a href="@Url.Action("OrderHistory", "Account")" class="btn btn-secondary btn-lg">
                    <i class="fas fa-box"></i> Xem đơn hàng
                </a>
            </div>
        </div>
    </div>
</div>

<!-- Optional CSS -->
<style>
    .card {
        border-radius: 10px;
        background-color: #f8f9fa;
    }

    .btn-lg {
        border-radius: 20px;
        padding: 10px 20px;
        font-size: 1.2rem;
    }
</style>
